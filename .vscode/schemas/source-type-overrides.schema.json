{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Source Type Overrides",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "version": { "type": ["integer", "string"] }
      }
    },
    "overrides": {
      "type": "object",
      "patternProperties": {
        "^[^.]+\\.[^.]+$": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": { "type": "string" },
              "reason": { "type": "string" }
            },
            "required": ["type"]
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["overrides"]
}